@model ReportSpace.Bll.RolesCollection

@{
    ViewBag.Title = "Roles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>RoleList</h2>

<p>
    @Html.ActionLink("Create New", "NewRole")
</p>
<table class="table table-hover">
   <thead>
       <tr>
           <td>Name</td>
           <td>Edit</td>
       </tr>
   </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@Html.ActionLink("Edit", "EditRole", new { PublicId = item.Publicid })</td>
            </tr>
        }
    </tbody>

</table>
